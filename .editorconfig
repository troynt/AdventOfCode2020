# http://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8

[Rakefile,.rspec,Guardfile]
indent_style=space
indent_size=2
trim_trailing_whitespace = true

[*.{ts,css}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.rb]
indent_style=space
indent_size=2
trim_trailing_whitespace = true